<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.anumbrella.menusummary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".Application"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ExpandableGridViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ExpandableListViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.ListGridViewActivity" />
        <activity android:name=".activity.ClassifyMenuActivity" />
        <activity android:name=".activity.ListListViewActivity" />


    </application>

</manifest>